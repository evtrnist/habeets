generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  username    String
  email       String    @unique
  habeets     Habeet[]
}


model Habeet {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  title       String
  stats       HabeetStat[]
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
}

model HabeetStat {
  id          Int       @id @default(autoincrement())
  date        DateTime
  status      Status
  habeet      Habeet    @relation(fields: [habeetId], references: [id])
  habeetId    Int  
}

enum Status {
  SUCCESS
  FAIL
  SKIP
}
